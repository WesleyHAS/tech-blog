<div class="edit-post-form-container">
  <form class="edit-post-form">
    <div class="form-group">
      <label for="post-content">Edit Post:</label>
      <textarea
        class="form-input form-textarea"
        id="post-content"
        name="content"
      >{{postData.content}}</textarea>
    </div>
    <div class="form-group">
      <button
        class="btn btn-primary"
        type="submit"
        id="submit-edit-button"
        data-postid="{{postData.id}}"
      >Save Changes</button>
      {{! <button class="btn" type="button" id="cancel-edit-button">Cancel</button> }}
    </div>
  </form>
</div>

<script src="/js/update-post.js"></script>