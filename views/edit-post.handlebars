<div class="edit-post-form-container">
  <form class="edit-post-form">
    <div class="form-group">
      <label for="post-content">Edit Post:</label>
      <textarea
        class="form-input form-textarea"
        id="post-content"
        name="content"
        rows="15"
        cols="100"
      >{{postData.content}}</textarea>
    </div>
    <div class="form-group">
      <button
        class="btn btn-primary"
        type="submit"
        id="submit-edit-button"
        data-postid="{{postData.id}}"
      >Save Changes</button>
    </div>
  </form>
</div>
<script src="/js/update-post.js"></script>