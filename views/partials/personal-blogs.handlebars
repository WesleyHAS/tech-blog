{{#each posts as |post|}}
  {{#if (eq post.user_id user_id)}}
    <section class="post">
      <header class="post-header">
        <h2>{{post.title}}</h2>
      </header>
      <div class="post-content">
        <p class="author">{{post.user.username}}</p>
        <p class="date">
          <p class="published"> Published:</p>
          {{post.createdAt}}</p>
        <p>{{post.content}}</p>
        <a href="/api/posts/{{post.id}}">Read more</a>
      </div>
    </section>
  {{/if}}
{{/each}}