{{#each posts as |post|}}
  <section class="post">
    <header class="post-header">
      <h2>{{post.title}}</h2>
    </header>
    <div class="post-content">
      <p class="author">{{post.user.username}}</p>
      <p class="date">Published: {{post.createdAt}}</p>
      <a href="/api/posts/{{post.id}}">Read more</a>
    </div>
  </section>
{{/each}}