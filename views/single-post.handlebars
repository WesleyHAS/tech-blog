{{#if post}}
  <section class="post">
    <header class="post-header">
      <h2>{{post.title}}</h2>
    </header>
    <div class="post-content">
      <p class="author">{{post.User.username}}</p>
      <p class="date">Published: {{post.createdAt}}</p>
      <p>{{post.content}}</p>

      {{#if post.comments}}
        <h3>Comments:</h3>
        <ul class="comments-list">
          {{#each post.comments as |comment|}}
            <li>{{comment.content}}</li>
          {{/each}}
        </ul>
      {{/if}}
    </div>
  </section>
{{/if}}